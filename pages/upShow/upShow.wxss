/* pages/upShow/upShow.wxss */
page{
  background-color: #fff;
}

.cover {
	width: 100%;
	max-height: 500px;
}

.title {
	color: rgba(16, 16, 16, 1);
	font-size: 40rpx;
	margin: 10px auto;
}

.content {
	color: rgba(16, 16, 16, 1);
	font-size: 35rpx;
	margin: 10px auto;
}

.container{
  margin: 20rpx auto;
  width: 94%;
}

.user-view{
  display: flex;
  align-items: center;
  line-height: 40rpx;
}

.user-view view:nth-child(3){
  margin:0 50rpx 0 ;
}

.user-info{
  margin:0 50rpx;
}

rich-text{
  width: 100%;
  display: block;
  margin-top: 30rpx;
  line-height: 2em;

}