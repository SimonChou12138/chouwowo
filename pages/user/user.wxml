<!--pages/user/user.wxml-->


<cu-custom bgColor="bg-opacity" class="bg-opacity custom">
	<view slot="content">个人中心</view>
</cu-custom>


<view style="position: relative;">
	<view class="bg-img  padding-tb-xl cover-view">
	</view>

	<view class="user-info" bindtap="login">
		<view style="background-image:url('{{userInfo.avatarUrl}}');" class="cu-avatar xl round">
			<view class="cu-tag badge cuIcon-male bg-blue "></view>
		</view>
		<view class="user-name">{{userInfo.nickName}}</view>
		<view>
			<text>{{attentionNum}} 关注</text> | <text>{{fans}} 粉丝</text>
		</view>
	</view>

</view>

<view class="bg-white padding grid-icons box">
	<view class="icons-item">
		<view class="bg-green cu-avatar lg round">
			<text class="cuIcon-discover lg text-write"></text>
		</view>
		<view>我的订单</view>
	</view>

	<view class="icons-item">
		<view class="bg-purple cu-avatar lg round">
			<text class="cuIcon-location lg text-write"></text>
		</view>
		<view>我的点评</view>
	</view>
	<view class="icons-item">
		<view class="bg-blue cu-avatar lg round">
			<text class="cuIcon-favor lg text-write"></text>
		</view>
		<view>我的收藏</view>
	</view>
	<view class="icons-item">
		<view class="bg-orange cu-avatar lg round">
			<text class="cuIcon-taxi lg text-write"></text>
		</view>
		<view>我的游记</view>
	</view>

</view>

<view class="bg-white padding box">
    <view>我的旅行足迹</view>
</view>

<view class="bg-white padding box">
    <view>精彩直播</view>
</view>

<view class="bg-white padding box">
    <view>近期热门</view>
</view>

<view class="bg-white padding box">
    <view>咨询客服</view>
</view>
